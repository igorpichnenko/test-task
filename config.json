{
  "source": [
    "./src/theme/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": [
        "css",
        "scss"
      ],
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "size/px"
      ],
      "buildPath": "./src/assets/variables/scss/",
      "files": [
        {
          "destination": "_variables.scss",
          "format": "css/variables"
        }
      ]
    }
  }
}