{
  "source": [
    "./src/theme/**/*.json"
  ],
  "platforms": {
    "css": {
      "transformGroup": "css",
      "transforms": [
        "attribute/cti",
        "name/cti/kebab",
        "size/px"
      ],
      "buildPath": "./src/variables/css/",
      "files": [
        {
          "destination": "_variables.css",
          "format": "css/variables"
        }
      ]
    }
  }
}